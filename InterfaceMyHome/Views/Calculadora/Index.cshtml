@model InterfaceMyHome.Controllers.ResultadoDoPagamento
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<form action="/Calculadora/index" method="post">
    <label>Salario do Vitor</label>
    <input type="text" name="salarioDoVitor" value="" /><br />

    <label>Salario da Rebeca</label>
    <input type="text" name="salarioDaRebeca" value="" /><br />

    <label>Valor do Aluguel:</label>
    <input type="text" name="valorDoAluguel" value="" /><br />

    <input type="submit" name="CALCULAR" value="CALCULAR" />
</form>

@if (Model != null)
{
    <h3>Resultado</h3>
    <div>
        sobrou salario da rb: @Model.getSobrouDoSalarioDaRebeca() <br />
        sobrou salario do vt: @Model.getSobrouDoSalarioDoVitor() <br />
        vitor deu: @Model.getVitordeu() <br />
        rb deu: @Model.getRebecaDeu() <br />
    </div>
}